---
import '@/styles/global.css';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <!-- show the version of Astro used -->
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <slot name="head" />
    <title>Css Effects | {title}</title>
  </head>
  <body>
    <header>
      <h1>CSS EFFECTS</h1>
      <nav>
        <a href="/" class:list={[{ active: Astro.url.pathname === '/' }]}
          >Links/buttons</a
        >
        <a
          href="/images"
          class:list={[{ active: Astro.url.pathname.startsWith('/images') }]}
          >Images</a
        >
        <a
          href="/cards"
          class:list={[{ active: Astro.url.pathname.startsWith('/cards') }]}
          >Cards</a
        >
        <a
          href="/effects"
          class:list={[{ active: Astro.url.pathname.startsWith('/effects') }]}
          >Effects</a
        >
        <a
          href="/parallaxPage"
          class:list={[
            { active: Astro.url.pathname.startsWith('/parallaxPage') },
          ]}>Parallax</a
        >
        <a
          href="/keyframes"
          class:list={[{ active: Astro.url.pathname.startsWith('/keyframes') }]}
          >Keyframes</a
        >
        <a
          href="/clip-path"
          class:list={[{ active: Astro.url.pathname.startsWith('/clip-path') }]}
          >Clip path</a
        >
        <a
          href="/with-js"
          class:list={[{ active: Astro.url.pathname.startsWith('/with-js') }]}
          >With Js</a
        >
      </nav>
    </header>
    <main><slot /></main>
    <footer><p>By Unibox</p></footer>
  </body>
</html>

<style>
  body {
    display: flex;
    flex-direction: column;
    background-color: #ccc;
    min-height: 100svh;
    overflow-x: clip;
  }
  header {
    margin: 1rem 0;
    h1 {
      margin: 1rem 0;
      color: rgb(193, 8, 240);
      font-size: 2rem;
      text-align: center;
      text-transform: uppercase;
    }
    nav {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 10px 20px;
      padding: 0 10px;
      font-size: 1.2rem;
      a {
        display: block;
        color: #2914e2;
        text-align: center;
        text-decoration: none;
        &.active {
          color: #2914e2;
          font-weight: bold;
          text-decoration: underline 3px;
          text-underline-offset: 0.5rem;
        }
      }
    }
  }
  main {
    flex: 1;
  }
  footer {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    background: #000;
    padding: 2rem 5px;
    color: #fff;
    font-size: 2rem;
    font-family: 'Italianno', serif;
  }
</style>

<script>
  const links = document.querySelectorAll('main a')! as NodeListOf<
    HTMLAnchorElement | HTMLButtonElement
  >;

  links.forEach((link) => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      if (import.meta.env.DEV) console.log(link?.classList);
    });
  });

  const isDevMode = import.meta.env.DEV;
  if (isDevMode) {
    const mode = 'development';
    console.log('ðŸš€ ~ :123 ~ mode:', mode);
  }
</script>
