---
import BaseLayout from '@/layouts/BaseLayout.astro';
// prettier-ignore
import { Js01, Js02, Js03, Js04, Js05, Js06, Js07, Js08, Js09 } from '@/components';
import bg07 from '@/images/with-js07/bg.jpg';
---

<BaseLayout title="With Js">
  <div class="grid">
    <div class="element black">
      <Js01 class="element01" />
    </div>
    <div class="element row2 col2 no-flex">
      <Js02 class="element02">
        <section id="header" slot="header">
          <h3>Logo</h3>
          <nav>
            <a href="#">Home</a>
            <a href="#">About</a>
            <a href="#">Services</a>
            <a href="#">Contact</a>
          </nav>
        </section>
      </Js02>
    </div>
    <div class="element row2">
      <Js03 class="element03" />
    </div>
    <div class="element black">
      <Js04 class="element04" />
    </div>
    <div class="element white row2 col2 no-flex">
      <Js05 class="element05" />
    </div>
    <div class="element row2 col2 no-flex">
      <Js06 class="element06" />
    </div>
    <div class="element row2 col2 no-flex">
      <Js07 class="element07" bg={bg07}>
        <section>
          <h3>Background Moving On Scroll</h3>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Deserunt,
            quidem cumque magnam vero amet libero, rerum sequi et molestiae
            animi quibusdam excepturi? Veritatis minima enim sint eius, nobis
