      <span slot="scrollme">Scroll me</span>
      <SampleContent class="sample" />
    </Js15>
    <Js16
      class="js js16"
      user={{
        imagePath: image16,
        alt: 'user',
        details: { name: 'Alaa Gomaa', job: 'Web Developer' },
      }}
      iconNames={[
        'ion:heart-outline',
        'ion:person-outline',
        'ion:trash-outline',
      ]}
    />
