---
import type { ImageMetadata } from 'astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
// prettier-ignore
import { SampleContent, Js01, Js02, Js03, Js04, Js05, Js06, Js07, Js08, Js09, Js10, Js11, Js12, Js13, Js14, Js15, Js16, Js17, Js18, Js19, Js20, Js21 } from '@/components';
const paris = '/src/images/paris.jpg';
const image14 = '/src/images/with-js14/bg.jpg';
const image16 = '/src/images/with-js16/img.jpg';

// js13
const images13 = import.meta.glob<{ default: ImageMetadata }>(
  '/src/images/with-js13/*.jpg'
);
const videos13Paths = [
  '/videos/video1.mp4',
  '/videos/video2.mp4',
  '/videos/video3.mp4',
  '/videos/video4.mp4',
];
const images13Paths = Object.keys(images13);
const alts13 = ['video1', 'video2', 'video3', 'video4'];
const imagesData13 = images13Paths.map((imagePath, idx) => ({
  imagePath,
  alt: alts13[idx],
}));

// js17
const images17Paths = [
  '/src/images/animation17/img-1.jpg',
  '/src/images/animation17/img-2.jpg',
  '/src/images/animation17/img-3.jpg',
  '/src/images/animation17/img-4.jpg',
];
---

