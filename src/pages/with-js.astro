  </div>

  <style>
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(15rem, 20rem));
      justify-content: center;
      place-items: center;
      gap: 2rem;
      margin: 3rem 0;
      /* overflow-x: clip; */
      .element {
        display: flex;
        position: relative;
        justify-content: center;
        align-items: center;
        small {
          color: #fff8;
          font-size: 0.8em;
        }

        .absolute {
          position: absolute;
          top: 10%;
          left: 50%;
          transform: translateX(-50%);
          z-index: 1000;
        }
        &.no-flex {
          display: block;
        }
        &.row2 {
          height: calc(var(--height) * 2);
        }
        &.row3 {
          height: calc(var(--height) * 3);
        }

        &.black {
          background-color: #222;
          color: #fafafa;
        }
        &.white {
          background-color: #fff;
          color: #000;
        }
        .x2height {
          height: 200%;
        }
        a {
          text-decoration: none;
        }

        .element17 {
          background: #0f296d;
        }
        .element18 {
          color: #fff;
          font-weight: 700;
          font-size: 2rem;
          letter-spacing: 2px;
        }
        &.element19 {
          font-size: 1.5rem;
        }
        &.element20 {
          border-radius: 5px;
          @media screen and (min-width: 40rem) {
            grid-column: span 2;
            width: 100%;
            height: 15rem;
          }
        }
        &.element21 {
          white-space: nowrap;
        }
      }
      .js {
      }
      .js02,
      .js05,
      .js06,
      .js07,
      .js08,
      .js09,
      .js11,
      .js12,
      .js13,
      .js14,
      .js15 {
        width: 100%;
      }
      .js01 {
        padding: 2rem 1rem 1rem;
      }
      .js02 {
        position: relative;
        background-color: #f9f9f9;
        color: #fff;
        font-weight: 700;
        font-size: 1.5rem;

        h4.absolute {
          position: absolute;
          top: 5%;
          width: 100%;
          color: #0008;
          font-weight: normal;
          font-size: 1rem;
          text-align: center;
        }

        #header {
          --color: #359381;
          display: flex;
          position: absolute;
          top: 0;
          left: 0;
          align-items: center;
          gap: 1em;
          z-index: 100;
          padding: 1.5em;
          font-size: 0.8rem;
          h3 {
            color: var(--color);
            font-size: 1.2rem;
          }

          nav {
            a {
              transition: 0.5s;
              border-radius: 20px;
              padding: 0.25em 0.4em;
              color: var(--color);
              font-weight: 500;
              text-decoration: none;
              &:hover {
                background-color: var(--color);
                color: #fff;
              }
            }
          }
        }
        .content {
          background: #222;
          padding: 1rem;
          color: #ccc;
          font-size: 0.8rem;
          h3 {
            margin-bottom: 1rem;
            font-size: 1.2rem;
          }
        }
      }

      .js04 {
        padding: 2rem 1rem;
      }
      .js05 {
        span {
          color: #fff8;
          font-size: 0.5em;
        }
      }
      .js06 {
        small {
          color: #fff8;
          font-size: 0.9rem;
        }
      }
      .js11 {
        background: #20415c;
        padding: 2rem 0 1rem;
        max-width: 18rem;
      }
      .js12 {
        background-color: #fff;
        h3 {
          background-clip: text;
          padding: 10px;
          -webkit-text-stroke: 1px #fff;
          color: transparent;
          font-size: 1.5em;
          small {
            -webkit-text-stroke: 0px;
            color: #fff8;
            font-weight: 400;
            font-size: 0.7em;
          }
        }
      }
      .js15 {
        .sample {
          position: relative;
          padding: 15rem 2rem 2rem;
        }
      }

      @media screen and (min-width: 40rem) {
        .element {
          &.col2 {
            grid-column: span 2;
          }
        }
      }
    }
  </style>
</BaseLayout>
