---
import BaseLayout from '@/layouts/BaseLayout.astro';
// prettier-ignore
import { Clip01 } from '@/components';

import paris from '@/images/paris.jpg';
---

<BaseLayout title="Clip path">
  <div class="grid">
    <div class="element row2">
      <Clip01 src={paris} alt="paris" height={400} shape="star" class="paris" />
    </div>
  </div>
</BaseLayout>

<style>
  .grid {
    --width: 13rem;
    display: grid;
    grid-template-columns: repeat(auto-fill, var(--width));
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin: 1rem 0;
    padding: 10px;
    .element {
      --height: calc(var(--width) / 2);
      display: flex;
      justify-content: center;
      align-items: center;
      height: var(--height);
      &.row2 {
        height: calc(var(--height) * 2);
      }
      &.col2 {
        grid-column: span 2;
      }
    }
  }
</style>
