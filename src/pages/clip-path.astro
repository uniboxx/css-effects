---
import BaseLayout from '@/layouts/BaseLayout.astro';
// prettier-ignore
import { Clip01, Clip02, Clip03, Clip04, Clip05, Clip06, Clip07, Clip08, Clip09, Clip10, Clip11 } from '@/components';

const paris = '/src/images/paris.jpg';
const newYork = '/src/images/new-york.jpg';
const dubai = '/src/images/dubai.jpg';
const girl = '/src/images/clip07/2.jpg';
const image08 = '/src/images/clip08/1.jpg';
---

<BaseLayout title="Clip path">
  <div class="grid">
    <Clip01 imagePath={paris} alt="Paris" />
    <Clip02 />
    <Clip03 />
    <Clip04
      imagesData={[
        { imagePath: paris, alt: 'paris', position: 'center' },
        {
          imagePath: newYork,
          alt: 'new-york',

          position: '70% center',
        },
        { imagePath: dubai, alt: 'dubai', position: '80% center' },
      ]}
    >
      <h3>Hover over the images</h3>
    </Clip04>
    <Clip05>
      <h3>Information</h3>
      <p>
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quibusdam
        sequi minima accusamus ad, iure nam quae voluptates voluptatem quis
        dolor dolores nulla veniam magni ut enim quo soluta? Voluptate,
        molestias.
      </p>
    </Clip05>
    <Clip06 class="clip clip06">Hover half texts</Clip06>
    <Clip07 class="clip clip07" imagePath={girl} alt="girl">
      <small class="hover-me" slot="hoverMe">Hover Me</small>
      <h3>Title</h3>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Impedit magnam
        deserunt dolorem qui facere fuga!
      </p>
      <a href="">Read More</a>
    </Clip07>
    <Clip08 class="clip clip08" imagePath={image08} alt="image08">
      <small class="hover-me" slot="hoverMe">Hover Me</small>
      <h3>Title</h3>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Impedit magnam
        deserunt dolorem qui facere fuga!
      </p>
      <a href="">Read More</a>
    </Clip08>
    <Clip09 />
    <Clip10 />
    <Clip11 />
  </div>
</BaseLayout>

<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    justify-content: center;
    place-items: center;
    gap: 4rem 2rem;
    margin: 2rem 0;
    @media screen and (min-width: 40rem) {
      grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
    }
    .element,
    .clip {
      text-align: center;
    }

    .clip06 {
      padding: 0.5em 0.7em 0.3em;
    }

    .clip07 {
      .hover-me {
        position: absolute;
        top: 10%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        color: #fff;
        font-size: 1.2em;
      }
      a {
        border-radius: 5px;
        background-color: #000;
        padding: 0.5em 1em;
        color: #fff;
        font: inherit;
        text-decoration: none;
      }
    }
    .clip08 {
      .hover-me {
        position: absolute;
        top: 10%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
        color: #000;
        font-size: 1.2em;
      }
      a {
        border: 1px solid currentColor;
        border-radius: 5px;
        padding: 0.5em 1em;
        color: inherit;
        font: inherit;
        text-decoration: none;
      }
    }
  }
</style>
