    }
    .navy {
      background-color: #001d30;
      color: #fff;
    }
    .x2cols {
      grid-column: span 2;
    }
    .bordered {
      border: 1px solid #333;
    }
    .x2rows {
      height: 200px;
    }
    .x2x2cells {
