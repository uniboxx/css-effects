    justify-content: center;
    place-items: center;
    gap: 2rem;
    margin: 1rem 0;
    overflow: clip;

    .red {
      background-color: #9a0e0e;
    }

    .lightOrange {
      background-color: #ee5253;
    }
    .black {
      background-color: #333;
      color: #fff;
    }
