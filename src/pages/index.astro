  </div>
</BaseLayout>

<style>
  h2 {
    margin-bottom: 1rem;
    text-align: center;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 220px));
    grid-gap: 20px;
    justify-content: center;
    align-items: center;
    margin-bottom: 0 auto 3rem;
    padding: 10px;
  }
  .bg {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #363636;
    height: 5rem;
    &.green {
      background-color: #2eceb1;
    }
    &.black {
      background-color: #222;
    }
    &.blue {
      background-color: #0c2461;
    }
  }
  .link {
    border: 3px solid var(--color);
    background-color: var(--bg);
    padding: 0.5rem 0.7rem;
    color: var(--color);
    font-size: 2rem;
  }
  .link01 {
    --color: #262626;
    border-width: 4px;
  }
  .link02 {
    --color: #351435;
  }
  .link03 {
    --color: #262626;
  }
  .link03 {
    --color: #262626;
  }
  .link04 {
    --color: #e1332d;
    font-size: 1.6rem;
  }
  .link05 {
    --color: #fff;
    --bg: #262626;
  }
  .link06 {
    --color: #fff;
    --bg: #262626;
  }
  .link07 {
    --color: #262626;
    --bg: #262626;
  }
  .link08 {
    --color: #262626;
  }
  .link09 {
    --color: tomato;
  }
  .link10 {
    --bg: #f1c40f;
    --color: #fff;
    border-color: var(--bg);
  }
  .link11 {
    --bg: #999;
    border-color: #ff0;
  }
  .link12 {
    --bg: #363636;
    --color: #ff0;
    border: none;
    border-radius: 8px;
  }
</style>

