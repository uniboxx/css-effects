    <div class="bg">
      <Link18 id="link18" class="link link18">Link18 </Link18>
    </div>
    <Link19 id="link19" class="link link19">Link19</Link19>
    <Link20 id="link20" class="link link20">Link20</Link20>
    <div class="bg green">
      <Link21 id="link21" class="link link21">Link21</Link21>
    </div>
    <Link22 id="link22" class="link link22">Link22</Link22>
    <div class="bg black">
      <Link23 id="link23" class="link link23">Link23</Link23>
    </div>
    <div class="bg blue">
      <Link24 id="link24" class="link link24">Link24</Link24>
    </div>
