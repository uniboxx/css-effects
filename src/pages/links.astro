---
import BaseLayout from '@/layouts/BaseLayout.astro';
// prettier-ignore
import { Link01, Link02, Link03, Link04, Link05, Link06, Link07, Link08, Link09, Link10, Link11, Link12 } from '@/components';
---

<BaseLayout title="Links">
  <h2>Hover over the link item</h2>
  <div class="grid">
    <Link01>🏠️ Link01</Link01>
    <Link02>🏠️ Link02</Link02>
    <Link03>🏠️ Link03</Link03>
    <Link04>🏠️ Link04</Link04>
    <Link05>🏠️ Link05</Link05>
    <Link06>🏠️ Link06</Link06>
    <Link07>🏠️ Link07</Link07>
    <Link08>🏠️ Link08</Link08>
    <Link09>🏠️ Link09</Link09>
    <Link10>🏠️ Link10</Link10>
    <Link11>🏠️ Link11</Link11>
    <Link12>🏠️ Link12</Link12>
  </div>
</BaseLayout>

<style>
  h2 {
    margin-bottom: 3rem;
    text-align: center;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 160px));
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 20rem;
    padding: 10px;
  }
</style>
