---
// prettier-ignore
import { Animation01, Animation02, Animation03, Animation04, Animation05, Animation06, Animation07, Animation08, Animation09, Animation10, Animation11, Animation12, Animation13, Animation14, Animation15, Animation16, Animation17, Animation18, Animation19, Animation20, Animation21, Animation22, Animation23, Animation24, Animation25, Animation26, Animation27, Animation28, Animation29, Animation30, Animation31, Animation32, Animation33, Animation34, Animation35, Animation36, Animation37, Animation38, Animation39, Animation40, Animation41 } from '@/components';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import bgImage from '@/images/animation03/bg.jpg';
import car from '@/images/animation03/car.png';
import motobike from '@/images/animation03/motobike.png';
import bg12 from '@/images/animation12/bg.jpg';
import img1 from '@/images/animation17/img-1.jpg';
import img2 from '@/images/animation17/img-2.jpg';
import img3 from '@/images/animation17/img-3.jpg';
import img4 from '@/images/animation17/img-4.jpg';
---

<BaseLayout>
  <div class="grid">
    <div class="animation green">
      <Animation01 text="Anim 01" class="animation01" />
    </div>
    <div class="animation green">
      <Animation02 class="animation02" />
    </div>
    <div class="animation">
      <Animation03 class="animation03" bgImage={bgImage} width="180px">
        <Image
          src={car}
          alt="car"
          priority
          width={50}
          height={25}
          class="car"
        />
        <Image
          src={motobike}
          alt="motobike"
          priority
          width={25}
          height={25}
          class="motobike"
        />
      </Animation03>
    </div>
    <div class="animation orange">
      <Animation04
        texts={['transitions', 'animations', 'transforms']}
        class="animation04"
      />
    </div>
    <div class="animation no-flex">
      <Animation05 class="animation05" />
    </div>
    <div class="animation black">
      <Animation06 class="animation06" />
    </div>
    <div class="animation black">
      <Animation07 class="animation07" bg="#f44336" />
    </div>
    <div class="animation black">
      <Animation08 class="animation08" text="LIGHTING" color="#484848" />
    </div>
    <div class="animation black">
      <Animation09 class="animation09" />
    </div>
    <div class="animation blue">
      <Animation10 class="animation10" text="ANIMATION 10" />
    </div>
    <div class="animation black">
      <Animation11 class="animation11" color="#fff" />
    </div>
    <div class="animation">
      <Animation12 class="animation12" bg={bg12} />
    </div>
    <div class="animation white">
      <Animation13
        class="animation13"
        iconName="heart"
        color="#f44336"
        hoverColor="#fff"
      />
    </div>
    <div class="animation x2cols white">
      <Animation14
        class="animation14"
        text="ANIMATION 14"
        color1="#f44336"
        color2="blue"
      />
    </div>
    <div class="animation black">
      <Animation15 class="animation15" />
    </div>
    <div class="animation black">
      <Animation16 class="animation16" iconName="whatsapp" color="#58ea00" />
    </div>
    <div class="animation x2x2cells black">
      <Animation17
        class="animation17"
        images={[img1, img2, img3, img4]}
        imageTime="4s"
        duration=".5s"
        width={400}
        height={200}
      />
    </div>
    <div class="animation">
      <Animation18 class="animation18">
        <h3>Animation 18</h3>
      </Animation18>
    </div>
    <div class="animation x2x2cells black">
      <Animation19 class="animation19" />
    </div>
    <div class="animation black">
      <Animation20 class="animation20" />
    </div>
    <div class="animation lightOrange">
      <Animation21 class="animation21" />
    </div>
    <div class="animation blue no-flex">
      <Animation22 class="animation22" text="Animation 22" />
    </div>
    <div class="animation white">
      <Animation23 class="animation23" text="An23" />
    </div>
    <div class="animation black">
      <Animation24 class="animation24" width="80%" height="3px" />
    </div>
    <div class="animation black">
      <Animation25 class="animation25" />
    </div>
    <div class="animation blue">
      <Animation26 class="animation26" />
    </div>
    <div class="animation blue">
      <Animation27 class="animation27" />
    </div>
    <div class="animation black">
      <Animation28 class="animation28" />
    </div>
    <div class="animation black">
      <Animation29 class="animation29">
        <h3>Animation 29</h3>
      </Animation29>
    </div>
    <div class="animation black">
      <Animation30 class="animation30" />
    </div>
    <div class="animation white">
      <Animation31 class="animation31" text="Animation 31" href="#" />
    </div>
    <div class="animation blue">
      <Animation32 class="animation32">
        <h3>Animation 32</h3>
      </Animation32>
    </div>
    <div class="animation black x2rows">
      <Animation33 class="animation33" />
    </div>
    <div class="animation black cWhite">
      <Animation34 class="animation34" text="An34" />
    </div>
    <div class="animation navy cWhite">
      <Animation35 class="animation35" />
    </div>
    <div class="animation white">
      <Animation36 class="animation36" text="Animation 36" href="#" />
    </div>
    <div class="animation black x2rows">
      <Animation37 class="animation37" />
    </div>
    <div class="animation navy cWhite">
      <Animation38 class="animation38" />
    </div>
    <div class="animation x2rows">
      <Animation39 class="animation39" />
    </div>
    <div class="animation red">
      <Animation40 class="animation40" text="Animation 40" />
    </div>
    <div class="animation navy">
      <Animation41 class="animation41" text="Animation 41" />
    </div>
  </div>
</BaseLayout>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, 240px);
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin: 1rem 0;
    padding: 10px;
    .animation {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 5rem;
      &.green {
        background-color: #26de81;
      }
      &.red {
        background-color: #9a0e0e;
      }
      &.orange {
        background-color: #ea2027;
      }
      &.lightOrange {
        background-color: #ee5253;
      }
      &.black {
        background-color: #333;
      }
      &.blue {
        background-color: #273c75;
      }
      &.gray {
        background-color: #00000066;
      }
      &.white {
        background-color: #fff;
      }
      &.navy {
        background-color: #001d30;
      }
      &.no-flex {
        display: block;
      }
      &.x2cols {
        grid-column: span 2;
      }
      &.bordered {
        border: 1px solid #333;
      }
      &.x2rows {
        height: 200px;
      }
      &.x2x2cells {
        grid-column: span 2;
        height: 200px;
      }
      &.cWhite {
        color: white;
      }
    }
    .animation01 {
      color: #fff;
      font-size: 2.4rem;
      line-height: 1;
      font-family: arial;
      letter-spacing: 5px;
      text-align: center;
      text-shadow:
        0 1px 0 #efefef,
        0 2px 0 #efefef,
        0 3px 0 #efefef,
        0 4px 0 #efefef,
        0 0.8rem 5px #0000001a;
    }
    .animation02 {
      border-radius: 12px;
      background-color: #fff;
      width: 3rem;
      height: 3rem;
    }

    img.car {
      position: absolute;
      bottom: 0;
      left: 35%;
      width: calc(100% / 6);
      height: auto;
    }
    img.motobike {
      position: absolute;
      bottom: 6%;
      left: 60%;
      width: calc(100% / 12);
      height: auto;
    }
    .animation04 {
      color: #fff;
      font-size: 1rem;
      span {
        color: #181464;
        font-family: arial;
        text-transform: uppercase;
      }
    }
    .animation06 {
      transition: 0.3s;
      border: 3px solid #fff;
      padding: 10px;
      color: #fff;
      font-size: 2rem;
      &:hover {
        border: 3px solid #f44336;
        color: #f44336;
      }
    }
    .animation07 {
      transition: 0.3s;
      border: 2px solid #fff;
      padding: 20px;
      color: #fff;
      font-size: 1.5rem;
    }
    .animation08 {
      font-size: 1.5rem;
    }
    .animation10 {
      font-weight: 700;
      font-size: 2rem;
    }
    .animation13 {
      font-size: 2rem;
    }
    .animation14 {
      font-weight: 700;
      font-size: 2rem;
    }
    .animation15 {
      font-size: 1.3rem;
    }
    .animation16 {
      font-size: 2.5rem;
    }
    .animation17 {
      height: 200px;
    }
    .animation18 {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1.5rem;
    }
    .animation22 {
      color: #fff;
      font-size: 1.3rem;
    }
    .animation29 {
      display: flex;
      justify-content: center;
      align-items: center;
      color: #fff;
      font-size: 1.1rem;
      h3 {
        border: solid white;
        border-width: 3px 0 3px 0;
      }
    }
    .animation31 {
      font-size: 1.3rem;
    }
    .animation32 {
      display: flex;
      justify-content: center;
      align-items: center;
      color: #fff;
      font-size: 1.1rem;
    }
    .animation36 {
      font-size: 1.3rem;
    }
  }
</style>
