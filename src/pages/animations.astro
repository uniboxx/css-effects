---
// prettier-ignore
import { Animation01, Animation02, Animation03, Animation04 } from '@/components';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import bgImage from '@/images/animation03/bg.jpg';
import car from '@/images/animation03/car.png';
import motobike from '@/images/animation03/motobike.png';
---

<BaseLayout>
  <div class="grid">
    <div class="animation green">
      <Animation01 text="Anim 01" class="animation01" />
    </div>
    <div class="animation green">
      <Animation02 class="animation02" />
    </div>
    <div class="animation">
      <Animation03 class="animation03" bgImage={bgImage} width="180px">
        <Image src={car} alt="car" width={50} height={25} class="car" />
        <Image
          src={motobike}
          alt="motobike"
          width={25}
          height={25}
          class="motobike"
        />
      </Animation03>
    </div>
    <div class="animation orange">
      <Animation04
        texts={['transitions', 'animations', 'transforms']}
        class="animation04"
      />
    </div>
  </div>

  <style>
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 240px);
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin: 1rem 0;
      padding: 10px;
      .animation {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 5rem;
        &.green {
          background-color: #26de81;
        }
        &.orange {
          background-color: #ea2027;
        }
        &.no-flex {
          display: block;
        }
      }
      .animation01 {
        color: #fff;
        font-size: 2.4rem;
        line-height: 1;
        font-family: arial;
        letter-spacing: 5px;
        text-align: center;
        text-shadow:
          0 1px 0 #efefef,
          0 2px 0 #efefef,
          0 3px 0 #efefef,
          0 4px 0 #efefef,
          0 0.8rem 5px #0000001a;
      }
      .animation02 {
        border-radius: 12px;
        background-color: #fff;
        width: 3rem;
        height: 3rem;
      }

      img.car {
        position: absolute;
        bottom: 0;
        left: 35%;
        width: calc(100% / 6);
        height: auto;
      }
      img.motobike {
        position: absolute;
        bottom: 6%;
        left: 60%;
        width: calc(100% / 12);
        height: auto;
      }
      .animation04 {
        color: #fff;
        font-size: 1rem;
        span {
          color: #181464;
          font-family: arial;
          text-transform: uppercase;
        }
      }
    }
  </style>
</BaseLayout>
