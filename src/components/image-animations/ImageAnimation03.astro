---
/*
INFORMATIONS
set: 
- image as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
*/
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  class?: string;
  duration?: string;
  image: ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
}
// prettier-ignore
const { class:className, duration='.5s', image, alt, width, height, format = 'webp', loading='lazy', ...attrs } = Astro.props;
---

<!-- prettier-ignore -->
<div class:list={[className, "container"]}>
  <Image src={image} alt={alt} loading={loading} width={width} height={height} format={format} {...attrs}/>
  <div class="caption">
    <slot />
  </div>
</div>

<style define:vars={{ duration }}>
  .container {
    position: relative;
    overflow: hidden;
    img {
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    .caption {
      position: absolute;
      transform: translateX(-100%);
      transition: var(--duration);
      inset: 0;
      background-color: #000000;
      color: #fff;
      text-align: center;
    }
    &:hover {
      img {
        transform: translateX(100%);
      }

      .caption {
        transform: translateX(0);
      }
    }
  }
</style>
