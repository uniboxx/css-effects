---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

/*
INFORMATIONS
set: 
- imagePath as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
*/

interface Props {
  class?: string;
  duration?: string;
  imagePath: string;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
}
// prettier-ignore
const { class:className, duration='.5s', imagePath, alt, width, height, format = 'webp', loading='lazy', ...attrs } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/**/*.{jpg,jpeg,png,webp,avif,svg,gif,eps,raw,bmp,tiff,ico}'
);
if (!images[imagePath]) throw new Error(`${imagePath} does not exist`);
---

<!-- prettier-ignore -->
<figure class={className}>
  <Image src={images[imagePath]()} alt={alt} loading={loading} width={width} height={height} format={format} {...attrs}/>
  <figcaption>
    <slot />
  </figcaption>
</figure>

<style define:vars={{ duration }}>
  figure {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: clip;
    img {
      display: block;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    figcaption {
      display: flex;
      position: absolute;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1em;
      transform: translateX(-100%);
      transition: var(--duration);
      inset: 0;
      background-color: #000000;
      color: #fff;
      text-align: center;
    }
    &:hover {
      img {
        transform: translateX(100%);
      }

      figcaption {
        transform: translateX(0);
      }
    }
  }
</style>
