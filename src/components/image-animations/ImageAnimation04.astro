---
/*
INFORMATIONS
set: 
- image as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
*/
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  class?: string;
  duration?: string;
  image: ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
}
// prettier-ignore
const { class:className, duration='.5s', image, alt, width, height, format = 'webp', loading='lazy', ...attrs } = Astro.props;
const styles = `--duration: ${duration};`;
---

<figure id="figure_yi2ks8ke" class={className} {...attrs}>
  <Image
    src={image}
    alt={alt}
    loading={loading}
    width={width}
    height={height}
    format={format}
  />
  <figcaption>
    <slot />
  </figcaption>
</figure>

<style>
  figure {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: clip;
    img {
      display: block;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    figcaption {
      display: flex;
      position: absolute;
      bottom: 0;
      left: 0;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1em;
      transform: translateY(100%);
      transition: var(--duration);
      background-color: #000000;
      padding: 0.5em 0;
      width: 100%;
      color: #fff;
      text-align: center;
    }
    &:hover {
      img {
        transform: translateY(calc(var(--captionHeight) * -1));
      }

      figcaption {
        transform: translateX(0%);
      }
    }
  }
</style>

<script>
  const container = document.getElementById(
    'figure_yi2ks8ke'
  ) as HTMLDivElement;
  const caption = container.querySelector('figcaption') as HTMLDivElement;

  container.style.cssText += `--captionHeight: ${caption.clientHeight}px`;
</script>
