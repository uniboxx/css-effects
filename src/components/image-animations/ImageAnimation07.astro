---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

/*
INFORMATIONS
set: 
- image as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
- hoverBgColor as string
*/

interface Props {
  class?: string;
  duration?: string;
  imagePath: string;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
  hoverBgColor?: string;
}
// prettier-ignore
const { class:classList, duration='.5s', imagePath, alt, width, height, format = 'webp', loading='lazy', hoverBgColor='#2d343655', ...attrs } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/**/*.{jpg,jpeg,png,webp,avif,svg,gif,eps,raw,bmp,tiff,ico}'
);
if (!images[imagePath]) throw new Error(`${imagePath} does not exist`);
---

<!-- prettier-ignore -->
<figure class={classList}>
  <Image src={images[imagePath]()} alt={alt} loading={loading} width={width} height={height} format={format} {...attrs}/>
  <figcaption>
    <slot />
  </figcaption>
</figure>

<style define:vars={{ duration, hoverBgColor }}>
  figure {
    position: relative;
    transition: var(--duration);
    width: 100%;
    height: 100%;
    overflow: clip;
    img {
      display: block;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    figcaption {
      display: flex;
      position: absolute;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1em;
      z-index: 1;
      transition: var(--duration);
      inset: 0;
      color: #fff;
      text-align: center;

      & > * {
        opacity: 0;
        transition: var(--duration);
      }
      & > *:first-child {
        transform: translate(50%, -350%);
      }
      & > *:nth-child(2) {
        transform: translate(-60%, 250%);
      }
      & > *:nth-child(n + 3) {
        transform: translateY(250%);
      }
    }
    &::after {
      position: absolute;
      top: 0;
      left: 0;
      transform: translate(50%, 0%) rotate(45deg);
      transform-origin: left;
      transition: var(--duration);
      transition-delay: calc(var(--duration) / 2);
      background-color: var(--hoverBgColor);
      width: 200%;
      height: 200%;
      content: '';
    }

    &:hover {
      figcaption {
        & > * {
          opacity: 1;
        }
        & > *:first-child {
          transform: translate(0, 0);
          transition-delay: 0.3s;
        }
        & > *:nth-child(2) {
          transform: translate(0, 0);
          transition-delay: 0.4s;
        }
        & > *:nth-child(n + 3) {
          transform: translateY(0);
          transition-delay: 0.5s;
        }
      }
      &::after {
        transform: translate(-10%, -60%) rotate(45deg);
        transition-delay: 0;
      }
    }
  }
</style>
