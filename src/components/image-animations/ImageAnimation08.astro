---
/*
INFORMATIONS
set: 
- image as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
- hoverBgColor as string
*/
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  class?: string;
  duration?: string;
  image: ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
  hoverBgColor?: string;
}
// prettier-ignore
const { class:className, duration='.25s', image, alt, width, height, format = 'webp', loading='lazy', hoverBgColor='#2d343688', ...attrs } = Astro.props;
---

<!-- prettier-ignore -->
<div class:list={[className, "container"]}>
  <Image src={image} alt={alt} loading={loading} width={width} height={height} format={format} {...attrs}/>
  <div class="caption">
    <slot />
  </div>
</div>

<style define:vars={{ duration, hoverBgColor }}>
  .container {
    position: relative;
    transition: var(--duration);
    overflow: hidden;
    img {
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    .caption {
      display: flex;
      position: absolute;
      top: 0;
      left: 0;
      flex-direction: column;
      justify-content: center;
      gap: 1rem;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      color: #fff;
      text-align: center;
      & > *:first-child {
        & > * {
          transition: var(--duration);
        }
        & > *:first-child {
          transform: translateY(-320%);
        }

        & > *:nth-child(2) {
          transform: translateX(100%) rotate(90deg);
        }
        & > *:nth-child(n + 3) {
          transform: translateY(-600%);
        }
      }
    }
    &::after {
      position: absolute;
      top: 0;
      left: 0;
      transform: translate(140%, -25%) rotate(180deg);
      transition: var(--duration);
      background-color: var(--hoverBgColor);
      width: 100%;
      height: 100%;
      content: '';
    }

    &:hover {
      .caption {
        & > *:first-child {
          & > *:first-child {
            transform: translateY(0%);
            transition-delay: 0.5s;
          }
          & > *:nth-child(2) {
            transform: translateX(0%) rotate(0deg);
            transition-delay: 0.4s;
          }
          & > *:nth-child(n + 3) {
            transform: translateY(0);
            transition-delay: 0.3s;
          }
        }
      }
      &::after {
        transform: translate(0, 0) rotate(0deg);
      }
    }
  }
</style>
