---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

/*
INFORMATIONS
set: 
- image as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
- hoverBgColor as string
*/

interface Props {
  class?: string;
  duration?: string;
  imagePath: string;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
  hoverBgColor?: string;
}
// prettier-ignore
const { class:classList, duration='.5s', imagePath, alt, width, height, format = 'webp', loading='lazy', hoverBgColor='#006266', ...attrs } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/**/*.{jpg,jpeg,png,webp,avif,svg,gif,eps,raw,bmp,tiff,ico}'
);
if (!images[imagePath]) throw new Error(`${imagePath} does not exist`);
---

<!-- prettier-ignore -->
<figure class={classList}>
  <Image src={images[imagePath]()} alt={alt} loading={loading} width={width} height={height} format={format} {...attrs}/>
  <figcaption>
    <slot />
  </figcaption>
</figure>

<style define:vars={{ duration, hoverBgColor }}>
  figure {
    position: relative;
    transition: var(--duration);
    border: 10px solid #fff;
    background-color: #444;
    width: 100%;
    height: 100%;
    overflow: clip;
    img {
      display: block;
      transition: var(--duration);
      transition-delay: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    figcaption,
    &::before {
      display: flex;
      position: absolute;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1em;
      inset: 0;
    }
    figcaption {
      transition: var(--duration);
      color: #fff;
      text-align: center;

      & > * {
        opacity: 0;
        transition: var(--duration);
      }
      & > *:nth-child(-n + 2) {
        transform: translateY(-400%);
      }
      & > *:nth-child(n + 3) {
        transform: translateY(-600%);
        transition: calc(var(--duration) * 0.4);
      }
    }
    &::before {
      opacity: 0;
      transition: calc(var(--duration) * 0.6);
      transition-delay: calc(var(--duration) * 0.6);
      background-color: var(--hoverBgColor);
      content: '';
    }

    &:hover {
      img {
        transform: scale(0) rotate(720deg);
        opacity: 0;
        transition-delay: 0s;
      }
      &::before {
        opacity: 1;
      }
      figcaption {
        & > * {
          transform: translateY(0%);
          opacity: 1;
        }
        & *:first-child {
          transition-delay: calc(var(--duration) * 1.8);
        }
        & > *:nth-child(2) {
          transition-delay: calc(var(--duration) * 1.4);
        }
        & > *:nth-child(n + 3) {
          transition-delay: var(--duration);
        }
      }
    }
  }
</style>
