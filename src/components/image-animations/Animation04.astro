---
const { width, height } = Astro.props;
---

<figure>
  <slot />
  <slot name="caption" />
</figure>

<style define:vars={{ width, height }}>
  figure {
    --duration: 0.5s;
    --captionHeight: 35%;
    position: relative;
    width: calc(var(--width) * 1px);
    height: calc(var(--height) * 1px);
    overflow: hidden;
    img {
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    figcaption {
      display: flex;
      position: absolute;
      bottom: 0;
      left: 0;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      transform: translateY(100%);
      transition: var(--duration);
      background-color: #000000;
      width: 100%;
      height: var(--captionHeight);
      color: #fff;
      text-align: center;

      p {
        font-size: 1rem;
        text-transform: capitalize;
      }
    }
    &:hover {
      img {
        transform: translateY(calc(var(--captionHeight) * -1));
      }

      figcaption {
        transform: translateX(0%);
      }
    }
  }
</style>
