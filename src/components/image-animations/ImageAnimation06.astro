---
const { width, height } = Astro.props;
---

<figure>
  <slot />
  <slot name="caption" />
</figure>

<style define:vars={{ width, height }}>
  figure {
    --duration: 0.5s;
    --primary-color: #ae895d;
    position: relative;
    width: calc(var(--width) * 1px);
    height: calc(var(--height) * 1px);
    overflow: hidden;
    img {
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    figcaption {
      display: flex;
      position: absolute;
      top: 0;
      justify-content: center;
      align-items: center;
      opacity: 0;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      content: '';
      color: #fff;
    }

    &:hover {
      img {
        transform: scale(1.2) rotate(9deg);
      }
      figcaption {
        opacity: 1;
      }
    }
  }
</style>
