---
const { width, height } = Astro.props;
---

<figure>
  <slot />
  <slot name="caption" />
</figure>

<style define:vars={{ width, height }}>
  figure {
    --duration: 0.5s;
    --primary-color: #006266;
    position: relative;
    transition: var(--duration);
    border: 10px solid #fff;
    background-color: #444;
    width: calc(var(--width) * 1px);
    height: calc(var(--height) * 1px);
    overflow: hidden;
    img {
      transition: var(--duration);
      transition-delay: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    figcaption {
      display: flex;
      position: absolute;
      top: 0;
      left: 0;
      flex-direction: column;
      justify-content: center;
      gap: 1rem;
      opacity: 0;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      color: #fff;
      text-align: center;

      p,
      a {
        align-self: center;
      }
      p {
        width: 80%;
      }
      a {
        background-color: black;
        padding: 10px;
        color: inherit;
        text-decoration: none;
        text-transform: uppercase;
      }
    }
    &::before {
      position: absolute;
      top: 0;
      left: 0;
      transform: scale(0) rotate(-180deg);
      transition: var(--duration);
      background-color: var(--primary-color);
      width: 100%;
      height: 100%;
      content: '';
    }

    &:hover {
      img {
        transform: scale(0);
        transition-delay: 0s;
      }
      figcaption {
        opacity: 1;
        transition-delay: calc(var(--duration) * 2);
      }
      &::before {
        transform: scale(1) rotate(0deg);
        transition-delay: var(--duration);
      }
    }
  }
</style>
