---
/*
INFORMATIONS
set: 
- image as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
- hoverBgColor as string
*/
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  class?: string;
  duration?: string;
  image: ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
  hoverBgColor?: string;
}
// prettier-ignore
const { class:className, duration='.5s', image, alt, width, height, format = 'webp', loading='lazy', hoverBgColor='#006266', ...attrs } = Astro.props;
---

<!-- prettier-ignore -->
<div class:list={[className, "container"]}>
  <Image src={image} alt={alt} loading={loading} width={width} height={height} format={format} {...attrs}/>
  <div class="caption">
    <slot />
  </div>
</div>

<style define:vars={{ duration, hoverBgColor }}>
  .container {
    position: relative;
    transition: var(--duration);
    border: 10px solid #fff;
    background-color: #444;
    overflow: hidden;
    img {
      transition: var(--duration);
      transition-delay: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    .caption {
      position: absolute;
      opacity: 0;
      transition: calc(var(--duration) / 2);
      transition-delay: 0;
      inset: 0;
      color: #fff;
      text-align: center;
    }
    &::before {
      position: absolute;
      top: 0;
      left: 0;
      transform: scale(0) rotate(-180deg);
      transition: var(--duration);
      background-color: var(--hoverBgColor);
      width: 100%;
      height: 100%;
      content: '';
    }

    &:hover {
      img {
        transform: scale(0);
        transition-delay: 0s;
      }
      .caption {
        opacity: 1;
        transition: var(--duration);
        transition-delay: calc(var(--duration) * 1.7);
      }
      &::before {
        transform: scale(1) rotate(0deg);
        transition-delay: var(--duration);
      }
    }
  }
</style>
