---
/*
INFORMATIONS
set: 
- image as imagemetadata
- alt as string
- width and/or height as numbers
set optionally:
- class as string
- duration as string 'value and s | ms' 
- format as string
- loading as 'lazy' | 'eager' | null
- colors as string (hoverBgColor)
*/
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  class?: string;
  duration?: string;
  image: ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  format?: string;
  loading?: 'lazy' | 'eager' | null;
  hoverBgColor?: string;
}
// prettier-ignore
const { class:className, duration='.5s', image, alt, width, height, format = 'webp', loading='lazy', hoverBgColor='#b28a7088', ...attrs } = Astro.props;
---

<!-- prettier-ignore -->
<div class:list={[className, "container"]}>
  <Image src={image} alt={alt} loading={loading} width={width} height={height} format={format} {...attrs}/>
  <div class="caption">
    <slot />
  </div>
</div>

<style define:vars={{ duration, hoverBgColor }}>
  .container {
    position: relative;
    overflow: hidden;
    img {
      transition: var(--duration);
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .caption {
      position: absolute;
      bottom: 0;
      left: 0;
      transform: translateY(-20px);
      opacity: 0;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      color: #fff;
      text-align: center;
    }
    &::before {
      position: absolute;
      top: 0;
      left: 0;
      transform: translateY(100%);
      transition: var(--duration);
      /* this delay is when hover out */
      transition-delay: var(--duration);
      background-color: var(--hoverBgColor);
      width: 100%;
      height: 100%;
      content: '';
    }
    &:hover {
      &::before {
        transform: translateY(0);
        /* this delay is when hover in */
        transition-delay: 0s;
      }

      .caption {
        transform: translateY(0);
        opacity: 1;
        transition-delay: var(--duration);
      }
    }
  }
</style>
