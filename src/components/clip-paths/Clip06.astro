---
/*INFORMATIONS:
set optionally
- class as string
- duration as string
- text as string
- colors as string ('<color1>, <color2>')
*/

interface Props {
  class?: string;
  duration?: string;
  textTop?: string;
  textBottom?: string;
}
const {
  class: classList,
  duration = '.5s',
  textTop = 'WHITE',
  textBottom = 'BLACK',
  ...attrs
} = Astro.props;

const style = `--duration: ${duration};`;
---

<div class:list={['container06', classList]} style={style} {...attrs}>
  <div class="placeholder">
    {textBottom}
    <span class="text">{textTop}</span>
    <span class="text">{textBottom}</span>
  </div>
  <small><slot /></small>
</div>

<style>
  .container06 {
    position: relative;
    transition: var(--duration);
    background: #c8d6e5;
    padding: 0.3em 0.7em;
    width: fit-content;
    font-size: 4rem;
    font-family: serif;
    .placeholder {
      position: relative;
      background: inherit;
      color: transparent;
      line-height: 1;
      font-family: inherit;
      .text {
        display: inline-block;
        position: absolute;
        transition: var(--duration);
        cursor: pointer;
        inset: 0;
        background: inherit;
        line-height: inherit;

        &:nth-of-type(1) {
          clip-path: polygon(0 0, 100% 0, 0 100%, 0 100%);
          color: #fff;
        }

        &:nth-of-type(2) {
          clip-path: polygon(100% 0, 100% 0, 100% 100%, 0 100%);
          color: #000;
        }

        &:hover {
          z-index: 1;
          clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
        }
      }
    }
    small {
      position: absolute;
      top: 2%;
      left: 50%;
      transform: translateX(-50%);
      color: #f0f;
      font-size: 0.25em;
    }
  }
</style>
