---
import { Icon } from 'astro-icon/components';

interface Props {
  iconName: string;
  class?: string;
  color: string;
  duration?: string;
}
const {
  class: className,
  iconName,
  color,
  duration = '1.5s',
  ...rest
} = Astro.props;
---

<div class="container">
  <Icon name={`mdi:${iconName}`} class:list={[className, 'icon']} {...rest} />
</div>

<style define:vars={{ color, duration }}>
  .container {
    position: relative;
    color: var(--color);
    &::before,
    &::after {
      position: absolute;
      top: 0;
      left: 0;
      animation: pulsing16 var(--duration) linear infinite;
      border: 1px solid var(--color);
      border-radius: 50%;
      width: 100%;
      height: 100%;
      content: '';
    }
    &::after {
      animation-delay: calc(var(--duration) / 3);
    }
  }
  @keyframes pulsing16 {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    50% {
      transform: scale(1);
      opacity: 1;
    }
    100% {
      transform: scale(1.3);
      opacity: 0;
    }
  }
</style>
