---
/*
INFORMATIONS
set optionally:
- class as string
- duration as string 'value and s | ms'
- colors as string ("<color>") 
*/

interface Props {
  class?: string;
  duration?: string;
  color?: string;
}
const {
  class: classList,
  duration = '8s',
  color = '#f5f5f5',
  ...attrs
} = Astro.props;
const size = '6em';
const style = `--duration: ${duration};--size: ${size};--color: ${color};`;
---

<div class:list={['container42', classList]} style={style} {...attrs}>
  <p class="letter">M</p>
  <div class="orbit">
    <p style={`--divider: ${parseFloat(size) / 3.85}`}></p>
    <div class="moon"></div>
  </div>
  <p class="letter">N</p>
</div>

<style>
  .container42 {
    --fz: calc(var(--size) / 6);
    display: flex;
    position: relative;
    justify-content: space-between;
    align-items: center;
    background: #001d30;
    /* border: 1px solid var(--color); */
    width: var(--size);
    height: var(--size);
    color: var(--color);
    font-size: 2rem;

    .letter {
      font-size: var(--fz);
    }
    .orbit {
      --orbitSize: calc(var(--size) / 2);
      display: flex;
      position: relative;
      justify-content: center;
      align-items: center;
      border-radius: 50%;
      width: var(--orbitSize);
      height: var(--orbitSize);
      p {
        --pSize: calc(var(--fz) * 0.8);
        --origin: calc(var(--orbitSize) / var(--divider));
        position: absolute;
        top: 50%;
        left: 0%;
        transform: translate(-50%, -50%);
        width: var(--pSize);
        height: var(--pSize);
        line-height: 0.8;
        &::before {
          position: absolute;
          top: 0%;
          left: 0%;
          transform-origin: var(--origin);
          animation: anim42 var(--duration) linear infinite;
          width: 100%;
          height: 100%;
          content: 'O';
          font-size: var(--fz);
        }
      }

      .moon {
        box-shadow:
          0 0 0 calc(var(--fz) / 5.8333) #ffffff0d,
          0 0 0 calc(var(--fz) / 5.8333 * 2) #ffffff0d,
          0 0 0 calc(var(--fz) / 5.8333 * 3) #ffffff0d;
        border-radius: 50%;
        background-color: var(--color);
        width: calc(var(--fz) * 1.5);
        height: calc(var(--fz) * 1.5);
      }
    }
  }
  @keyframes anim42 {
    100% {
      transform: rotate(360deg);
    }
  }
</style>
