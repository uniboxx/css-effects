---
interface Props {
  text?: string;
  duration?: string;
  class?: string;
}
const { class: className, ...rest } = Astro.props;
---

<div class="container">
  <div class:list={['loading01', className]} {...rest}></div>
</div>

<style define:vars={{ duration: '2s' }}>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 100px;
    width: 100%;
    height: 100%;
  }
  .loading01 {
    perspective: 500px;
    animation: loading01 var(--duration) linear infinite;
    border-radius: 0.375rem;
    background-color: #fff;
    width: 3rem;
    height: 3rem;
  }
  @keyframes loading01 {
    0% {
      transform: rotateX(0deg) rotateY(0deg);
    }
    50% {
      transform: rotateX(0deg) rotateY(180deg);
    }
    100% {
      transform: rotateX(180deg) rotateY(180deg);
    }
  }
</style>
