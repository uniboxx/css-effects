---
/*
INFORMATIONS
set optionally:
- class as string
- duration as string 'value and s | ms'
- size as string
*/

interface Props {
  class?: string;
  duration?: string;
  size?: string;
}
const {
  class: classList,
  duration = '2s',
  size = '3rem',
  ...attrs
} = Astro.props;
---

<div class:list={['loading02', className]} {...attrs}></div>

<style define:vars={{ duration, size }}>
  .loading02 {
    perspective: calc(var(--size) * 8);
    animation: loading02 var(--duration) linear infinite;
    border-radius: calc(var(--size) / 10);
    background-color: #fff;
    width: var(--size);
    height: var(--size);
  }

  @keyframes loading02 {
    0% {
      transform: rotateX(0deg) rotateY(0deg);
    }
    50% {
      transform: rotateX(0deg) rotateY(180deg);
    }
    100% {
      transform: rotateX(180deg) rotateY(180deg);
    }
  }
</style>
