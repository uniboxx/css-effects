---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---

<div id="container19" class={className}>
  <span></span><span></span><span></span><span></span><span></span>
</div>

<style>
  #container19 {
    --duration: 3s;
    --delay: calc(var(--duration) / 2);
    display: flex;
    border-top: 10px solid #fff;
    span {
      display: block;
      position: relative;
      transform-origin: top;
      margin: 0 29px;
      background-color: white;
      width: 3px;
      height: 150px;
      &:first-of-type {
        animation: anim19Left var(--duration) infinite ease-in;
      }
      &:last-of-type {
        animation: anim19Right var(--duration) infinite ease-in;
        animation-delay: var(--delay);
      }
      &::before {
        position: absolute;
        bottom: 0;
        left: 0;
        transform: translateX(-50%);
        border-radius: 50%;
        background-color: #fff;
        width: 60px;
        height: 60px;
        content: '';
      }
    }
  }
  @keyframes anim19Left {
    0% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(45deg);
    }
    50% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
  @keyframes anim19Right {
    0% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(-45deg);
    }
    50% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
</style>
