---
import { Icon } from 'astro-icon/components';

/*
INFORMATIONS
set optionally:
- class as string
- duration as string 'value and s | ms'
- iconName as string
- size as string
- color as string 
*/

interface Props {
  class?: string;
  duration?: string;
  iconName?: string;
  size?: string;
  color?: string;
}
const {
  class: classList,
  duration = '1.5s',
  iconName = 'mdi:whatsapp',
  size = '4rem',
  color = '#58ea00',
  ...attrs
} = Astro.props;
const style = `--duration: ${duration};--size: ${size};--color: ${color};`;
---

<div class:list={['container16', classList]} style={style} {...attrs}>
  <Icon name={iconName} />
</div>

<style>
  .container16 {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    color: var(--color);
    &::before,
    &::after {
      position: absolute;
      animation: pulsing16 var(--duration) linear infinite;
      inset: 0;
      border: 0.1em solid var(--color);
      border-radius: 50%;
      content: '';
    }
    &::after {
      animation-delay: calc(var(--duration) / 3);
    }
    svg {
      font-size: var(--size);
    }
  }
  @keyframes pulsing16 {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    50% {
      transform: scale(1);
      opacity: 1;
    }
    100% {
      transform: scale(1.3);
      opacity: 0;
    }
  }
</style>
