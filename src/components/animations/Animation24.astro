---
/*
INFORMATIONS
set optionally:
- class as string
- duration as string 'value and s | ms'
- size as string
- color as string ("<color>")
*/

interface Props {
  class?: string;
  duration?: string;
  size?: string;
  color?: string;
}
const {
  class: classList,
  duration = '1s',
  size = '4rem',
  color = '#fff',
  ...attrs
} = Astro.props;
const style = `--duration: ${duration};--size: ${size};--color: ${color};`;
---

<div class:list={['container24', classList]} style={style} {...attrs}>
  {
    Array.from({ length: 9 }).map((_, idx) => (
      <span style={`--delay: ${(idx % 3) * 0.1}s`} />
    ))
  }
</div>

<style>
  .container24 {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background: #273c75;
    width: var(--size);
    height: var(--size);
    span {
      position: relative;
      width: calc(var(--size) / 3);
      height: calc(var(--size) / 3);
      &::before {
        position: absolute;
        animation: loading24 var(--duration) infinite linear;
        animation-delay: var(--delay);
        inset: 0;
        background-color: var(--color);
        content: '';
      }
    }
  }
  @keyframes loading24 {
    from {
      width: 100%;
      height: 100%;
    }
    to {
      width: 0;
      height: 0;
    }
  }
</style>
