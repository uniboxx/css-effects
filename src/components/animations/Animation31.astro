---
interface Props {
  class?: string;
  color?: string;
  duration?: string;
  text: string;
  href: string;
}
const {
  class: className,
  color = 'red',
  duration = '.5s',
  text,
  href = '#',
} = Astro.props;
---

<a href={href} class={className}>{text}</a>

<style define:vars={{ duration, color }}>
  a {
    position: relative;
    z-index: 1;
    transition: var(--duration);
    padding: 5px 10px;
    overflow: hidden;
    font: inherit;
    &::before {
      position: absolute;
      top: 50%;
      left: -100%;
      transform: translateY(-50%);
      z-index: -1;
      background-color: var(--color);
      width: 100%;
      height: 4px;
      content: '';
    }
    &:hover {
      color: white;
      &::before {
        animation: anim31 var(--duration) linear forwards;
      }
    }
  }

  @keyframes anim31 {
    0% {
      left: -100%;
      height: 4px;
    }
    50% {
      left: 0;
      height: 4px;
    }

    100% {
      left: 0;
      height: 100%;
    }
  }
</style>
