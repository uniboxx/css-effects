---
/*
INFORMATIONS
USE FONT-SIZE TO SET THE BALLS'S SIZE
set optionally:
- class as string
- duration as string 'value and s | ms'
- ballNumber as number
- color as string ("<color>")
*/

interface Props {
  class?: string;
  duration?: string;
  ballNumber?: number;
  color?: string;
}
// prettier-ignore
const { class: classList, duration = '1s', ballNumber = 5, color='#fff', ...attrs } = Astro.props;

const style = `--duration: ${duration};--color: ${color};`;
---

<div class:list={['container', classList]} style={style} {...attrs}>
  <ul>
    {
      Array.from({ length: ballNumber }).map(() => {
        const delay = `${(Math.floor(Math.random() * ballNumber * 20) / 100).toFixed(2)}s`;
        return <li style={`--delay: ${delay}`} />;
      })
    }
  </ul>
</div>

<style>
  .container {
    background: #222;
    padding: 1rem 2rem;
    width: fit-content;
    ul {
      display: flex;
      justify-content: center;
      align-items: end;
      gap: 0.5em;
      border-bottom: 0.25em solid var(--color);
      min-height: 4.5em;
      list-style: none;
      li {
        animation: jumping11 var(--duration) linear infinite;
        animation-delay: var(--delay);
        border-radius: 50%;
        background-color: var(--color);
        width: 1em;
        height: 1em;
      }
    }
  }
  @keyframes jumping11 {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-300%);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
