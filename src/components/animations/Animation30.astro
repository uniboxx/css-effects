---
interface Props {
  class?: string;
  color?: string;
  hexSize?: string;
  duration?: string;
}
const {
  class: classList,
  color = '#0af',
  hexSize = '30px',
  duration = '2s',
} = Astro.props;
---

<div id="line30" class={classList}>
  <div id="hexagon"></div>
</div>

<style define:vars={{ color, hexSize, duration }}>
  #line30 {
    position: relative;
    top: 20%;
    animation: anim30 var(--duration) linear infinite alternate;
    margin: 0 auto;
    border: 2px solid var(--color);
    width: calc(var(--hexSize) * 6);
    #hexagon {
      position: absolute;
      right: calc(100%-var(--hexSize));
      bottom: calc(var(--hexSize) * 0.33);
      animation: hexagon30 var(--duration) infinite linear alternate;
      background-color: var(--color);
      width: var(--hexSize);
      height: calc(var(--hexSize) * 0.6);
      &::before,
      &::after {
        position: absolute;
        top: 0;
        left: 0;
        background-color: var(--color);
        width: 100%;
        height: 100%;
        content: '';
      }
      &::before {
        transform: rotate(60deg);
      }
      &::after {
        transform: rotate(-60deg);
      }
    }
  }
  @keyframes hexagon30 {
    from {
      left: 0;
    }
    to {
      left: calc(100% / 6 * 5);
      transform: rotate(720deg);
    }
  }
  @keyframes anim30 {
    0% {
      transform: rotate(30deg);
    }
    100% {
      transform: rotate(-30deg);
    }
  }
</style>
