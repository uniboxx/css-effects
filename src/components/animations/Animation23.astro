---
interface Props {
  class?: string;
  duration?: string;
  text: string;
  size?: string;
  ringColor?: string;
}
const {
  class: className,
  duration = '1s',
  text,
  size = '90px',
  ringColor = '#262626',
} = Astro.props;
---

<div id="container23" class={className}>
  <h3>{text}</h3>
</div>

<style define:vars={{ duration, size, ringColor }}>
  #container23 {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    width: var(--size);
    height: var(--size);
    h3 {
      font: inherit;
    }

    &::before {
      position: absolute;
      top: 0;
      left: 0;
      animation: anim23 var(--duration) infinite linear;
      border-left: calc(var(--size) * 0.025) solid var(--ringColor);
      border-radius: 50%;
      width: 100%;
      height: 100%;
      content: '';
    }
  }

  @keyframes anim23 {
    to {
      transform: rotate(360deg);
    }
  }
</style>
