---
import heart from '@/images/heart.png';
import { Image } from 'astro:assets';
---

<Image src={heart} alt="heart" width={50} height={50} />

<style>
  img {
    animation: heartbeat 1.5s infinite;
  }
  @keyframes heartbeat {
    0% {
      transform: scale(1);
    }
    14% {
      transform: scale(1.2);
    }
    28% {
      transform: scale(1.1);
    }
    42% {
      transform: scale(1.3);
    }
    70% {
      transform: scale(1);
    }
  }
</style>
