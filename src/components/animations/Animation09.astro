---
// need to install astro-icon and @iconify-json/mdi
import { Icon } from 'astro-icon/components';

interface Props {
  class?: string;
  duration?: string;
}
const { class: classList, duration = '1.5s', ...attrs } = Astro.props;
---

<div id="container09">
  <Icon class={className} name="mdi:heart" {...attrs} />
</div>

<style define:vars={{ duration }}>
  #container09 {
    [data-icon='mdi:heart'] {
      animation: heartbeat09 var(--duration) infinite;
    }
  }
  @keyframes heartbeat09 {
    0% {
      transform: scale(1);
    }
    14% {
      transform: scale(1.2);
    }
    28% {
      transform: scale(1.1);
    }
    42% {
      transform: scale(1.3);
    }
    70% {
      transform: scale(1);
    }
  }
</style>
