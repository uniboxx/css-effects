---
/*
INFORMATIONS
set optionally:
- class as string
- duration as string 'value and s | ms'
- size as string (size of square)
- colors as string ("<color1>, <color2>, <color3>, <color4>")
*/

interface Props {
  class?: string;
  duration?: string;
  size?: string;
  colors?: string;
}
const {
  class: classList,
  duration = '1s',
  size = '1rem',
  colors = 'orange, blue, white, yellow',
  ...attrs
} = Astro.props;

const colorsArray = colors.split(',');

const style = `--duration: ${duration};--size: ${size};`;
---

<div class:list={['container17', classList]} style={style} {...attrs}>
  <div class="loading17">
    {
      Array.from({ length: 4 }).map((_, idx) => (
        <span style={`background: ${colorsArray[idx]}`} />
      ))
    }
  </div>
</div>

<style>
  .container17 {
    --loadingSize: calc(var(--size) * 2);
    --containerSize: calc(var(--loadingSize) * 2);
    display: flex;
    justify-content: center;
    align-items: center;
    background: #222;
    width: var(--containerSize);
    height: var(--containerSize);
    .loading17 {
      position: relative;
      transform: rotate(45deg);
      animation: anim17 var(--duration) infinite linear;
      width: var(--loadingSize);
      height: var(--loadingSize);
      span {
        position: absolute;
        animation: anim17Spans var(--duration) infinite linear;
        width: var(--size);
        height: var(--size);
        &:nth-of-type(1) {
          top: 0;
          left: 0;
        }
        &:nth-of-type(2) {
          top: 0;
          right: 0;
        }
        &:nth-of-type(3) {
          right: 0;
          bottom: 0;
        }
        &:nth-of-type(4) {
          bottom: 0;
          left: 0;
        }
      }
    }
  }
  @keyframes anim17 {
    0%,
    10% {
      width: var(--loadingSize);
      height: var(--loadingSize);
    }

    50% {
      width: calc(var(--loadingSize) * 1.5);
      height: calc(var(--loadingSize) * 1.5);
    }
    90%,
    100% {
      width: var(--loadingSize);
      height: var(--loadingSize);
    }
  }
  @keyframes anim17Spans {
    0%,
    10% {
      transform: rotate(0deg);
    }

    50% {
      transform: rotate(90deg);
    }

    90%,
    100% {
      transform: rotate(90deg);
    }
  }
</style>
