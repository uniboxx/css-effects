---
import { getImage } from 'astro:assets';

/* INFORMATIONS:
set: 
- url as string
- alt as string 
- width and/or height as numbers
- loading as 'lazy' or 'eager' or null (default 'lazy')
- format as string
set optionally:
- class as string
- duration as string 'value and s | ms' 
*/
interface Props {
  class?: string;
  duration?: string;
  colors?: string;
  url: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager' | null;
  format?: string;
  title?: string;
}
// prettier-ignore
const { class: classList, duration =".5s", colors='#9bdc22, #03a9f4, #e91e63', url, alt, width=400, height, loading="lazy", format="webp", title='Card09', ...attrs } = Astro.props;

const { src } = await getImage({ src: url, format, width, height, loading });
const [color1, color2, color3] = colors.split(',');
const styles = `--duration: ${duration};--color1: ${color1};--color2: ${color2};--color3: ${color3};`;
---

<article class={classList} style={styles} data-content={title} {...attrs}>
  <figure><img src={src} alt={alt} /></figure>
  <div class="content"><slot /></div>
</article>

<style>
  article {
    position: relative;
    cursor: pointer;
    border-radius: 1em;
    background-color: #232323;
    /* width: 100%; */
    overflow: clip;

    &::before,
    &::after {
      position: absolute;
    }

    /* circle */
    &::before {
      clip-path: circle(150px at 80% 20%);
      transition: var(--duration) ease-in-out;
      inset: 0;
      background-color: var(--color1);
      content: '';
    }
    &::after {
      top: 30%;
      left: -20%;
      content: attr(data-content);
      color: #ffffff05;
      font-style: italic;
      font-weight: 800;
      font-size: 12rem;
    }

    figure {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      transition: var(--duration);
      padding: 40px 0;
      width: 100%;

      img {
        display: block;
        position: relative;
        transform: rotate(-25deg);
        margin: 0 auto;
        width: 70%;
        height: auto;
        object-fit: cover;
      }
    }

    .content {
      position: absolute;
      bottom: 0;
      z-index: 5;
      transition: 1s;
      width: 100%;
      height: 100px;
      color: #fafafa;
      text-align: center;

      h3 {
        position: relative;
        font-weight: 600;
        letter-spacing: 1px;
      }
      & > div {
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: var(--duration);
        padding: 8px 20px;
        h4 {
          margin-right: 10px;
          font-weight: 300;
          font-size: 0.8rem;
          letter-spacing: 2px;
          text-transform: uppercase;
        }
      }
      .size span,
      .color span {
        cursor: pointer;
        margin: 0 5px;
      }
      .size span {
        transition: var(--duration);
        border-radius: 4px;
        background-color: white;
        width: 1.5rem;
        height: 1.5rem;
        color: #111;
        font-size: 0.8rem;
        line-height: 1.4rem;
      }
      .color span {
        border-radius: 50%;
        width: 1rem;
        height: 1rem;
        &:nth-of-type(1) {
          background-color: var(--color1);
        }
        &:nth-of-type(2) {
          background-color: var(--color2);
        }
        &:nth-of-type(3) {
          background-color: var(--color3);
        }
      }

      a {
        position: relative;
        transform: translateY(50px);
        opacity: 0;
        transition: var(--duration);
        margin-top: 0.5rem;
        border-radius: 4px;
        background-color: #fafafa;
        padding: 10px 30px;
        color: #111;
        font-weight: 600;
      }
    }

    &:hover {
      &::before {
        clip-path: circle(17rem at 80% -20%);
      }
      figure {
        top: 0;
        transform: translateY(0);
      }
      .content {
        height: 210px;
        & > div {
          opacity: 1;
        }
        .size {
          transition-delay: var(--duration);
        }
        .color {
          transition-delay: calc(var(--duration) * 1.2);
        }
        a {
          transform: translateY(0);
          opacity: 1;
          transition-delay: calc(var(--duration) * 1.25);
        }
      }
    }
    .size span:hover {
      background-color: var(--color1);
    }
  }
</style>
