---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.3s',
  colors = '#fff, #f44336, #fff',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [bandColor, hoverBgColor, hoverColor] = colors.split(',');

const style = `--duration: ${duration};--bandColor: ${bandColor}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor};`;
---

<Tag class={classList} {...attrs} style={style}><slot /></Tag>

<style>
  a,
  button {
    display: flex;
    position: relative;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 0.1em 0.4em;
    transition: var(--duration) ease-in-out;
    cursor: pointer;
    border: 0.056em solid #fff;
    border-radius: 5px;
    background: transparent;
    padding: 0.5em 0.7em;
    overflow: clip;
    line-height: 1;
    &::before {
      --band-size: 1em;
      position: absolute;
      top: 0;
      left: 0;
      transform: translateX(-50%) translateY(100%) rotate(45deg);
      transform-origin: top;
      transition: var(--duration) ease-in-out;
      border-top: var(--band-size) solid var(--bandColor);
      background-color: transparent;
      width: 142%; /* maximum ration hypotenuse/longer side */
      height: 100%;
      content: '';
    }

    &:hover {
      background-color: var(--hoverBgColor);
      color: var(--hoverColor);
      &::before {
        transform: translateX(calc(142% / 2 - 50%))
          translateY(calc(var(--band-size) * -1)) rotate(45deg);
        transform-origin: 50% var(--band-size);
      }
    }
  }
</style>
