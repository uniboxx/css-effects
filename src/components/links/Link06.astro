<style>
  a {
    --primary-color: #16a085;
    --duration: 0.5s;
    position: relative;
    transition: var(--duration);
    margin: 0 auto;
    width: 100%;
    min-height: 2.6rem;
    overflow: hidden;
    color: inherit;
    font-size: 1.2rem;
    text-decoration: none;

    span,
    &::before {
      position: absolute;
      top: 0;
      transition: var(--duration);
      width: 100%;
      height: 100%;
    }
    &::before {
      display: inline-block;
      right: 0;
      transform-origin: right;
      background-color: var(--primary-color);
      max-width: 0;
      content: '';
    }
    span {
      display: flex;
      left: 0;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      transition-delay: var(--duration);
      padding: 0.5rem 1rem;
    }
    span:nth-child(2) {
      top: 100%;
    }

    &:hover {
      &::before {
        right: unset;
        left: 0;
        max-width: 100%;
      }
      span {
        transform: translateY(-100%);
        transition-delay: 0s;
      }
    }
  }
</style>
