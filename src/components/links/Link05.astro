---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.5s',
  colors = '#f44336, #fff',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [hoverBgColor, hoverColor] = colors.split(',');

const style = `--duration: ${duration}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor || 'currentColor'};`;
---

<!-- HOW TO USE
<Link05 class="link">üè†Ô∏è Link test
<Fragment class="hover" slot="hover">üè†Ô∏è Hovered</Fragment>
</Link05> -->
<Tag class={classList} style={style} {...attrs}
  ><slot /><div class="hover"><slot name="hover" /></div></Tag
>

<style>
  a,
  button {
    position: relative;
    cursor: pointer;
    border: 0.056em solid #fff;
    background: #000;
    padding: 0.5em 0.7em;
    overflow: clip;
    color: #fff;
    &,
    .hover {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 0.1em 0.4em;
      line-height: 1;
    }
    .hover {
      position: absolute;
      transform: translateY(-100%);
      transition: var(--duration) ease-in-out;
      inset: 0;
      background-color: var(--hoverBgColor);
      color: var(--hoverColor);
    }

    &:hover {
      .hover {
        transform: translateY(0);
      }
    }
  }
</style>
