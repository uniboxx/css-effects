---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, and optional hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.2s',
  colors = '#ff0',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [hoverBgColor, hoverColor] = colors.split(',');

const style = `--duration: ${duration}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor || hoverBgColor};`;
---

<Tag class={classList} {...attrs} style={style}>
  <slot />
  {Array.from({ length: 4 }).map(() => <span />)}
</Tag>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    transition: var(--duration);
    cursor: pointer;
    gap: 0.1em 0.4em;
    padding: 0.5em 0.7em;
    width: max-content;
    color: inherit;
    text-decoration: none;

    span {
      position: absolute;
      opacity: 0;
      transition: var(--duration);
      border: 0 solid var(--hoverBgColor);
      width: 10px;
      height: 10px;
      content: '';
      &:nth-of-type(1) {
        top: 9px;
        left: -2px;
        border-width: 2px 0 0 2px;
      }
      &:nth-of-type(2) {
        top: 9px;
        right: -2px;
        border-width: 2px 2px 0 0;
      }
      &:nth-of-type(3) {
        right: -2px;
        bottom: 9px;
        border-width: 0 2px 2px 0;
      }
      &:nth-of-type(4) {
        bottom: 9px;
        left: -2px;
        border-width: 0 0 2px 2px;
      }
    }

    &:hover {
      color: var(--hoverColor);
      span {
        opacity: 1;

        &:nth-of-type(1) {
          top: 0;
          left: -8px;
        }
        &:nth-of-type(2) {
          top: 0;
          right: -8px;
        }
        &:nth-of-type(3) {
          right: -8px;
          bottom: 0;
        }
        &:nth-of-type(4) {
          bottom: 0;
          left: -8px;
        }
      }
    }
  }
</style>
