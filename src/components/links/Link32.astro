---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, and optional hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.2s',
  colors = '#ff0',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [hoverBgColor, hoverColor] = colors.split(',');

const style = `--duration: ${duration}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor || hoverBgColor};`;
---

<Tag class={classList} {...attrs} style={style}
  ><slot /><span></span><span></span><span></span><span></span></Tag
>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    transition: var(--duration);
    cursor: pointer;
    width: max-content;
    color: inherit;
    text-decoration: none;

    span {
      position: absolute;
      opacity: 0;
      transition: var(--duration);
      border: 0 solid var(--hoverBgColor);
      width: 10px;
      height: 10px;
      content: '';
      &:nth-child(1),
      &:nth-child(2) {
        top: 9px;
      }
      &:nth-child(1),
      &:nth-child(4) {
        left: -2px;
      }
      &:nth-child(1) {
        border-width: 2px 0 0 2px;
      }
      &:nth-child(2) {
        border-width: 2px 2px 0 0;
      }
      &:nth-child(3),
      &:nth-child(4) {
        bottom: 9px;
      }
      &:nth-child(2),
      &:nth-child(3) {
        right: -2px;
      }
      &:nth-child(3) {
        border-width: 0 2px 2px 0;
      }
      &:nth-child(4) {
        border-width: 0 0 2px 2px;
      }
    }

    &:hover {
      color: var(--hoverColor) !important;
      span {
        opacity: 1;
        &:nth-child(1),
        &:nth-child(2) {
          top: 0;
        }
        &:nth-child(3),
        &:nth-child(4) {
          bottom: 0;
        }
        &:nth-child(1) {
          left: -8px;
        }
        &:nth-child(2) {
          right: -8px;
        }
        &:nth-child(3) {
          right: -8px;
        }
        &:nth-child(4) {
          left: -8px;
        }
      }
    }
  }
</style>
