---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
- zoom as number (0 to infinite)
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  zoom?: number;
  [key: string]: string | string[] | number | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.3s',
  colors = '#ee5a24,  #fff',
  zoom = 1.3,
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [hoverBgColor, hoverColor] = colors.split(',');

const style = `--duration: ${duration}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor};--zoom: ${zoom};`;
---

<Tag class={classList} {...attrs} style={style}><slot /></Tag>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    transition: var(--duration);
    cursor: pointer;
    width: max-content;
    color: inherit;
    text-decoration: none;

    &::before {
      position: absolute;
      top: 0;
      left: 0;
      transform: scale(0);
      z-index: -1;
      transition: var(--duration);
      background-color: var(--hoverBgColor);
      width: 100%;
      height: 100%;
      content: '';
    }

    &:hover {
      transform: scale(var(--zoom));
      color: var(--hoverColor) !important;
      &::before {
        transform: scale(1);
      }
    }
  }
</style>
