---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.5s',
  colors = '#000, #16a085,  #fff',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [color, hoverBgColor, hoverColor] = colors.split(',');

const style = `--duration: ${duration};--color: ${color}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor};`;
---

<Tag class={classList} {...attrs} style={style}
  ><slot /><span><slot /></span><span><slot /></span></Tag
>

<style>
  a,
  button {
    position: relative;
    justify-content: center;
    cursor: pointer;
    width: max-content;
    overflow: hidden;
    color: transparent !important;
    text-decoration: none;

    &,
    span {
      display: flex;
      align-items: center;
      transition: var(--duration);
      width: max-content;
    }
    span,
    &::before {
      position: absolute;
      top: 0;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      color: var(--color);
    }
    &::before {
      display: inline-block;
      right: 0;
      transform-origin: right;
      background-color: var(--hoverBgColor);
      width: 0;
      content: '';
    }
    span {
      display: flex;
      left: 0;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      padding: 0.5rem 1rem;
    }
    span:nth-child(2) {
      top: 100%;
      color: var(--hoverColor);
    }

    &:hover {
      &::before {
        left: 0;
        width: 100%;
      }
      span {
        transform: translateY(-100%);
        transition-delay: 0s;
      }
    }
  }
</style>
