<a href=""><span><slot /></span></a>
<!-- in alternative to before/after you can use different spans   -->

<style>
  a {
    --primary-color: #262626;
    --duration: 0.5s;
    position: relative;
    transition: var(--duration);
    margin: 0 auto;
    width: 100%;
    min-height: 2.6rem;
    overflow: hidden;
    color: inherit;
    font-size: 1.2rem;
    text-decoration: none;

    span {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      padding: 0.5rem 1rem;
      width: 100%;
      height: 100%;
    }

    &::before,
    &::after,
    span::before,
    span::after {
      position: absolute;
      top: 0;
      transform: scaleY(0);
      transform-origin: top;
      z-index: -1;
      transition: calc(var(--duration) / 5 * 3);
      background-color: var(--primary-color);
      width: 25%;
      height: 100%;
      content: '';
    }
    &::before {
      left: 0;
    }
    &::after {
      left: 25%;
      transition-delay: 0.1s;
    }
    span::before {
      left: 50%;
      transition-delay: 0.2s;
    }
    span::after {
      left: 75%;
      transition-delay: 0.3s;
    }
    &:hover {
      color: white;
      &::before,
      &::after,
      span::before,
      span::after {
        transform: scaleY(1);
      }
    }
  }
</style>
