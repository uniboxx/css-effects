---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
*/
import type { Polymorphic } from 'astro/types';

type Tag = 'a' | 'button';

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  class?: string;
  duration?: string;
} & Polymorphic<{ as: TagGeneric }>;

const { class: classList, duration = '.5s', ...attrs } = Astro.props;

const Tag = attrs.href ? 'a' : 'button';
---

<Tag class={classList} {...attrs} style={`--duration: ${duration};`}
  ><slot /></Tag
>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    transition: var(--duration) ease-in-out;
    cursor: pointer;
    overflow: hidden;
    letter-spacing: -2px;
    &:hover {
      border-width: 7px;
      font-weight: bold;
      letter-spacing: 4px;
    }
  }
</style>
