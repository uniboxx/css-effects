---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'bgColor1, hoverColor' 
*/
import type { Polymorphic } from 'astro/types';

type Tag = 'a' | 'button';

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  class?: string;
  duration?: string;
  colors?: string;
} & Polymorphic<{ as: TagGeneric }>;

const {
  class: classList,
  duration = '.3s',
  colors = '#ee5253,  #0a3d62',
  ...attrs
} = Astro.props;

const Tag = attrs.href ? 'a' : 'button';

const [bgColor1, bgColor2, hoverColor] = colors.split(',');
---

<Tag
  class={classList}
  {...attrs}
  style={`--duration: ${duration}; --bgColor1: ${bgColor1};--bgColor2: ${bgColor2};`}
  ><slot /></Tag
>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    transition: var(--duration);
    cursor: pointer;

    &::before,
    &::after {
      position: absolute;
      transform: skewX(30deg);
      z-index: -1;
      transition: var(--duration) cubic-bezier(0.68, -0.55, 0.265, 1.55);
      width: 50%;
      height: 100%;
      content: '';
    }
    &::before {
      top: -5px;
      left: -1%;
      background-color: var(--bgColor1);
    }
    &::after {
      top: 5px;
      left: 51%;
      background-color: var(--bgColor2);
    }

    &:hover {
      &::before,
      &::after {
        top: 0;
        transform: skewX(0deg);
      }
      &::before {
        left: 50%;
      }
      &::after {
        left: 0;
      }
    }
  }
</style>
