---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'bgColor1, bgColor2' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.3s',
  colors = '#ee5253,  #0a3d62',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [bgColor1, bgColor2] = colors.split(',');

const style = `--duration: ${duration}; --bgColor1: ${bgColor1};--bgColor2: ${bgColor2};`;
---

<Tag class={classList} {...attrs} style={style}><slot /></Tag>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    gap: 0.1em 0.4em;
    transition: var(--duration);
    cursor: pointer;
    border: none;
    background: transparent;
    padding: 0.5em 0.7em;
    color: #fff;
    line-height: 1;

    &::before,
    &::after {
      position: absolute;
      transform: skewX(30deg);
      z-index: -1;
      transition: var(--duration) cubic-bezier(0.68, -0.55, 0.265, 1.55);
      width: 50%;
      height: 100%;
      content: '';
    }
    &::before {
      top: -5px;
      left: -1%;
      background-color: var(--bgColor1);
    }
    &::after {
      top: 5px;
      left: 51%;
      background-color: var(--bgColor2);
    }

    &:hover {
      &::before,
      &::after {
        top: 0;
        transform: skewX(0deg);
      }
      &::before {
        left: 50%;
      }
      &::after {
        left: 0;
      }
    }
  }
</style>
