---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'bgColor1, bgColor2, hoverColor' 
*/
import type { Polymorphic } from 'astro/types';

type Tag = 'a' | 'button';

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  class?: string;
  duration?: string;
  colors?: string;
} & Polymorphic<{ as: TagGeneric }>;

const {
  class: classList,
  duration = '.3s',
  colors = '#20caff,  #ff7675, #272727',
  ...attrs
} = Astro.props;

const Tag = attrs.href ? 'a' : 'button';

const [bgColor1, bgColor2, hoverColor] = colors.split(',');
---

<Tag
  class={classList}
  {...attrs}
  style={`--duration: ${duration}; --bgColor1: ${bgColor1}; --bgColor2: ${bgColor2};--hoverColor: ${hoverColor}`}
  ><slot /></Tag
>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    perspective: 1000px;
    transition: var(--duration);
    cursor: pointer;

    &::before,
    &::after {
      position: absolute;
      z-index: -1;
      mix-blend-mode: multiply;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      content: '';
    }
    &::before {
      top: -3px;
      left: -3px;
      transform-origin: top;
      background-color: var(--bgColor1);
    }
    &::after {
      top: 3px;
      left: 3px;
      transform-origin: bottom;
      background-color: var(--bgColor2);
    }

    &:hover {
      color: var(--hoverColor);
      &::before,
      &::after {
        left: 0;
      }
      &::before {
        top: -6px;
        transform: rotateX(75deg);
      }
      &::after {
        top: 6px;
        transform: rotateX(-75deg);
      }
    }
  }
</style>
