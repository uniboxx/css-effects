---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'bgColor1, bgColor2, hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.3s',
  colors = '#20caff,  #ff7675, #272727',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [bgColor1, bgColor2, hoverColor] = colors.split(',');

const style = `--duration: ${duration}; --bgColor1: ${bgColor1}; --bgColor2: ${bgColor2};--hoverColor: ${hoverColor}`;
---

<Tag class={classList} {...attrs} style={style}><slot /></Tag>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    perspective: 1000px;
    transition: var(--duration);
    cursor: pointer;
    background: transparent;
    padding: 0.5em 0.7em;

    &::before,
    &::after {
      --offset: 0.085em;
      position: absolute;
      z-index: -1;
      mix-blend-mode: multiply;
      transition: var(--duration);
      width: 100%;
      height: 100%;
      content: '';
    }
    &::before {
      top: calc(var(--offset) * -1);
      left: calc(var(--offset) * -1);
      transform-origin: top;
      background-color: var(--bgColor1);
    }
    &::after {
      top: var(--offeset);
      left: var(--offeset);
      transform-origin: bottom;
      background-color: var(--bgColor2);
    }

    &:hover {
      color: var(--hoverColor);
      &::before,
      &::after {
        left: 0;
      }
      &::before {
        top: calc(var(--offset) * -2);
        transform: rotateX(75deg);
      }
      &::after {
        top: calc(var(--offset) * 2);
        transform: rotateX(-75deg);
      }
    }
  }
</style>
