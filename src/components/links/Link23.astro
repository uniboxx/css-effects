---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.5s',
  colors = '#1e9bff,  #fafafa',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [hoverBgColor, hoverColor] = colors.split(',');
const style = `--duration: ${duration}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor};`;
---

<Tag id="link_jedv3kitf" class={classList} {...attrs} style={style}>
  {Array.from({ length: 4 }).map(() => <span />)}
  <slot />
</Tag>

<style>
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    gap: 0.1em 0.4em;
    z-index: 0;
    transition: var(--duration);
    cursor: pointer;
    border: 0.056em solid var(--hoverBgColor);
    background: #000;
    padding: 0.5em 0.7em;
    color: #1e9bff;
    line-height: 1;

    span {
      --length: 30px;
      --thin: 4px;
      position: absolute;
      transform: rotate(var(--rotation)) scale(1);
      transition: var(--duration) ease-in-out;
      transition-delay: calc(var(--duration) / 2);
      background: transparent;

      width: 100%;
      height: 100%;
      pointer-events: none;
      &::before {
        position: absolute;
        top: var(--beforeTop);
        left: 50%;
        transform: translateX(-50%);
        transition: var(--duration);
        box-shadow:
          0 0 10px var(--hoverBgColor),
          0 0 20px var(--hoverBgColor),
          0 0 30px var(--hoverBgColor),
          0 0 40px var(--hoverBgColor),
          0 0 100px var(--hoverBgColor);
        background-color: var(--hoverBgColor);
        width: 0.12em;
        height: 0.85em;
        content: '';
      }
    }
    &::before {
      position: absolute;
      transform: scale(0);
      z-index: -1;
      transition: var(--duration);
      inset: 0;
      background-color: var(--hoverBgColor);
      content: '';
    }

    &:hover {
      transition-delay: var(--duration);
      color: var(--hoverColor);
      span {
        transform: rotate(var(--rotation)) scale(0);
        transition-delay: 0s;
      }
      &::before {
        transform: scale(1);
        transition-delay: var(--duration);
        box-shadow:
          0 0 10px var(--hoverBgColor),
          0 0 30px var(--hoverBgColor),
          0 0 60px var(--hoverBgColor);
      }
    }
  }
</style>

<script>
  const button = document.getElementById('link_jedv3kitf')!;
  const spans = button.querySelectorAll('span')! as NodeListOf<HTMLSpanElement>;

  const width = button.clientWidth;
  const height = button.clientHeight;

  spans.forEach((span, idx) => {
    const rotation = 90 * idx;
    const beforeTop =
      rotation === 0 || rotation === 180 ? height * -0.5 : width * -0.5;
    span.style.cssText += `--rotation: ${rotation}deg;--beforeTop: ${beforeTop}px;`;
  });
</script>
