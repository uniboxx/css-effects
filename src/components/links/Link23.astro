---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
*/
import type { Polymorphic } from 'astro/types';

type Tag = 'a' | 'button';

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  class?: string;
  duration?: string;
  colors?: string;
} & Polymorphic<{ as: TagGeneric }>;

const {
  class: classList,
  duration = '.5s',
  colors = '#1e9bff,  #fafafa',
  ...attrs
} = Astro.props;

const Tag = attrs.href ? 'a' : 'button';

const [hoverBgColor, hoverColor] = colors.split(',');
const style = `--duration: ${duration}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor};`;
---

<Tag class={classList} {...attrs} style={style}>
  <span></span><span></span><span></span><span></span>
  <slot />
</Tag>

<style>
  button {
    --length: 30px;
    --thin: 4px;
    --offsetX: -10%;
    --offsetY: -60%;
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 0;
    transition: var(--duration);
    cursor: pointer;

    span {
      position: absolute;
      transition: var(--duration) ease-in-out;
      transition-delay: calc(var(--duration) / 2);
      box-shadow:
        0 0 10px var(--hoverBgColor),
        0 0 20px var(--hoverBgColor),
        0 0 30px var(--hoverBgColor),
        0 0 40px var(--hoverBgColor),
        0 0 100px var(--hoverBgColor);
      background-color: var(--hoverBgColor);
      &:nth-child(1),
      &:nth-child(3) {
        top: calc(50% - 2px);
        width: var(--length);
        height: var(--thin);
      }
      &:nth-child(1) {
        left: var(--offsetX);
        transform-origin: left;
      }
      &:nth-child(3) {
        right: var(--offsetX);
        transform-origin: right;
      }
      &:nth-child(2),
      &:nth-child(4) {
        left: calc(50% - 2px);
        width: var(--thin);
        height: var(--length);
      }
      &:nth-child(2) {
        top: var(--offsetY);
        transform-origin: top;
      }
      &:nth-child(4) {
        bottom: var(--offsetY);
        transform-origin: bottom;
      }
    }
    &::before {
      position: absolute;
      top: 0;
      left: 0;
      transform: scale(0);
      z-index: -1;
      transition: var(--duration);
      background-color: var(--hoverBgColor);
      width: 100%;
      height: 100%;
      content: '';
    }

    &:hover {
      border: 2px solid transparent;
      color: var(--hoverColor);
      span {
        transition-delay: 0s;
        &:nth-child(1),
        &:nth-child(3) {
          transform: scaleX(0);
        }
        &:nth-child(1) {
          left: 50%;
        }
        &:nth-child(3) {
          right: 50%;
        }
        &:nth-child(2),
        &:nth-child(4) {
          transform: scaleY(0);
        }
        &:nth-child(2) {
          top: 50%;
        }
        &:nth-child(4) {
          bottom: 50%;
        }
      }
      &::before {
        transform: scale(1);
        transition-delay: var(--duration);
        box-shadow:
          0 0 10px var(--hoverBgColor),
          0 0 30px var(--hoverBgColor),
          0 0 60px var(--hoverBgColor);
      }
    }
  }
</style>
