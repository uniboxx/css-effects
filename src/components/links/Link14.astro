---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'hoverBgColor, hoverColor' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  number?:number
  [key: string]: string | string[] | number| undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '.2s',
  colors = '#f6b93b,  #363636',
  number = 4,
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [hoverBgColor, hoverColor] = colors.split(',');

const style = `--duration: ${duration}; --hoverBgColor: ${hoverBgColor}; --hoverColor: ${hoverColor};`;
const regex = /(?<size>[\d\.]+)(?<unit>s|ms)/;
const { groups } = regex.exec(duration)!;
const size = +groups?.size!;
const unit = groups?.unit!;
---

<Tag class={classList} {...attrs} style={style}>
  <slot />
  {
    Array.from({ length: number }).map((_, idx) => {
      return (
        <span
          style={`left: ${(100 / number) * idx}%;width: ${100 / number}%;transition-delay: ${(size / 2) * idx}${unit}`}
        />
      );
    })
  }
</Tag>

<style>
  a,
  button {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    z-index: 0;
    transition: var(--duration);
    cursor: pointer;
    border: 0.056em solid var(--hoverBgColor);
    border-radius: 5px;
    background: var(--hoverColor);
    padding: 0.5em 0.7em;
    overflow: clip;
    color: var(--hoverBgColor);
    line-height: 1;

    span {
      position: absolute;
      z-index: -1;
      transition-duration: var(--duration);
      background-color: var(--hoverBgColor);
      height: 100%;
      &:nth-of-type(odd) {
        top: 100%;
      }
      &:nth-of-type(even) {
        top: -100%;
      }
    }

    &:hover {
      border-color: var(--hoverColor);
      color: var(--hoverColor);
      span {
        top: 0%;
      }
    }
  }
</style>
