---
/*
INFORMATIONS
set optionally:
- class 
- duration as string 'value and s | ms' 
- colors as string 'color1, color2' 
*/

type Tag = 'a' | 'button';
type AnchorProps = {
  href: string;
};
type ButtonProps = {
  type?: 'submit' | 'reset' | 'button';
};

// prettier-ignore
type Props<TagGeneric extends Tag> = {
  tag?: TagGeneric;
  class?: string;
  duration?: string;
  colors?: string;
  borderWidth?:string;
  [key: string]: string | string[] | undefined;
} & (TagGeneric extends 'a' ? AnchorProps : ButtonProps);

const {
  href,
  tag: Tag = href ? 'a' : 'button',
  type,
  class: classList,
  duration = '1s',
  colors = '#262626, #00ade1',
  borderWidth = '.3em',
  ...rest
} = Astro.props;

const attributesBasedOnTag = Tag === 'a' ? { href } : { type };
const { ...attrs } = { ...attributesBasedOnTag, ...rest };

const [color1, color2] = colors.split(',');

const style = `--duration: ${duration}; --color1: ${color1}; --color2: ${color2};--borderWidth: ${borderWidth};`;
---

<Tag class={classList} {...attrs} style={style}
  >&nbsp;&nbsp;<slot />&nbsp;&nbsp;<span>&nbsp;&nbsp;<slot />&nbsp;&nbsp;</span
  ></Tag
>

<style>
  a,
  button {
    position: relative;
    justify-content: center;
    gap: 1rem;
    transition: var(--duration) 0s ease-out;
    padding: 0.5em 0 !important;
    width: max-content;
    -webkit-text-stroke-color: var(--color1);
    color: transparent !important;
    text-decoration: none;

    &,
    span {
      display: flex;
      align-items: center;
      -webkit-text-stroke-width: 1px;
      font-weight: 900;
    }

    span {
      position: absolute;
      right: 0;
      left: 0;
      transition: var(--duration);
      border-right: var(--borderWidth) solid var(--color2);
      width: 0%;
      height: 100%;
      -webkit-text-stroke-color: var(--color2);
      overflow: hidden;
      color: var(--color2);
      font: inherit;
      text-align: center;
      text-wrap: nowrap;
    }

    &:hover {
      transition-delay: var(--duration);
      -webkit-text-stroke-color: var(--color2);
      span {
        width: 100%;
      }
    }
  }
</style>
